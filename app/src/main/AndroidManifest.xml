<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- 在SD卡中创建与删除文件权限 -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/simplemusic_icon"
        android:label="@string/app_name"
        android:preserveLegacyExternalStorage="true"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication.NoActionBar"
        tools:targetApi="31">
        <service
            android:name=".ui.musichome.service.MusicService"
            android:enabled="true"
            android:exported="true"></service>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.musichome.first_layout.RecentMusicActivity"
            android:theme="@style/Theme.MyApplication.NoActionBar" />

        <activity android:name=".ui.musichome.first_layout.RankMusicActivity" />

        <activity
            android:name=".ui.musichome.first_layout.AllMusicActivity"
            android:theme="@style/Theme.MyApplication.NoActionBar" />

        <activity android:name=".ui.musichome.SongMusicInfoActivity" />

        <activity android:name=".ui.musichome.second_layout.secondlayoutActivity" />

        <activity android:name=".ui.musichome.second_layout.ShowMusicListActivity" />

        <activity android:name=".ui.musichome.second_layout.ListAddMusicActivity" />

        <activity android:name=".ui.user.CreateUserActivity"/>

        <activity android:name=".ui.user.LoginActivity"/>

        <activity android:name=".ui.user.ChangePasswordActivity"/>
        
        <activity android:name=".ui.user.FindPasswordActivity"/>

    </application>

</manifest>