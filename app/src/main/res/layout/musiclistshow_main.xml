<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6699A1">

        <!--Toolbar-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/showlist_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#006284"
            app:navigationIcon="@mipmap/icon_return_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_listtitle"
                android:layout_gravity="center"
                android:text="歌单名称"
                android:textColor="#FFFFFF"
                android:textSize="18sp"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/addmusic_white"
                android:layout_gravity="right"
                android:id="@+id/bt_addmusic_title"
                android:layout_marginRight="20dp"/>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@drawable/secondlayout_item_list"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/iv_showlist"
                android:src="@drawable/firstsonglist"
                android:layout_margin="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_inputtext">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="简介"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/tv_showlist"
                    android:text="内容"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_showlist"
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:layout_marginTop="2dp"/>

        <include layout="@layout/musicplayercontroller"/>

    </LinearLayout>
</layout>
