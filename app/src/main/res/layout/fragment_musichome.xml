<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#6699A1"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.musichome.MusicHomeFragment">

    <LinearLayout
        android:id="@+id/first_linear"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/music_first_background"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/all_music"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:background="@drawable/allmusic" />

        <ImageButton
            android:id="@+id/rank_music"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:background="@drawable/rankmusic" />

        <ImageButton
            android:id="@+id/recent_music"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/recentmusic" />

    </LinearLayout>

    <include layout="@layout/second_layout" />

    <include layout="@layout/musicplayercontroller" />

</LinearLayout>