<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6699A1">
        <!--Toolbar-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/createlist_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#006284"
            app:navigationIcon="@mipmap/icon_return_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_secondtitle"
            android:layout_gravity="center"
            android:text="创建歌单"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/createsong_background"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="歌单名称"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:id="@+id/et_name"
                android:hint="请输入歌单名"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:imeOptions="actionDone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/createsong_background"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="歌单简介"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:id="@+id/et_profile"
                android:hint="请输入简介"
                android:layout_gravity="center"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:background="@drawable/edittext_inputtext"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:background="@drawable/createsong_background"
            android:layout_margin="10dp"
            android:gravity="center">
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="创建"
                android:textSize="20dp"
                android:layout_marginRight="80dp"
                android:id="@+id/bt_create"
                android:background="@drawable/bt_background"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="取消"
                android:textSize="20dp"
                android:id="@+id/bt_cancel"
                android:background="@drawable/bt_background"/>
        </LinearLayout>



    </LinearLayout>
</layout>