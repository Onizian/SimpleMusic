<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6699A1">

        <!--Toolbar-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/recentmusic_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#006284"
            app:navigationIcon="@mipmap/icon_return_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_thirdtitle"
                android:layout_gravity="center"
                android:text="最近播放"
                android:textColor="#FFFFFF"
                android:textSize="18sp"/>

        </androidx.appcompat.widget.Toolbar>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recentmusic"
            android:layout_width="match_parent"
            android:layout_height="625dp" />
        <include layout="@layout/musicplayercontroller"/>
    </LinearLayout>
</layout>